<Window x:Class="SpriteGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpriteGenerator"
        mc:Ignorable="d"
        Title="Sprite Generator" Height="500" Width="800" Background="#FFDEDEDE">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="New_Click"/>
                <MenuItem Header="_Open" Click="Open_Click"/>
                <MenuItem x:Name="SaveMenuItem" Header="_Save" Click="Save_Click" IsEnabled="False"/>
                <MenuItem Header="Save _As" Click="SaveAs_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="10">
            
            <!-- Layout rows and columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- name of the project-->
            <TextBlock x:Name="ProjectNameTextBlock" Text="New Project"
               FontWeight="Bold"
               Grid.Row="0"
               Grid.ColumnSpan="3"
               Margin="0,0,0,10"/>
            
            <!-- output directory -->
            <TextBlock Text="Output Directory"
               Grid.Row="1"
               VerticalAlignment="Center"/>
            <TextBox x:Name="OutputFileTextBox"
             Grid.Row="1"
             Grid.Column="1"
             Margin="5"/>
            <Button x:Name="BrowseButton" Content="Browse..."
            Grid.Row="1"
            Grid.Column="2"
            Margin="5"
            Padding="10,2"
            Click="BrowseOutput_Click"/>
            
            <!-- output file name -->
            <TextBlock Text="Filename (.png)"
               Grid.Row="2"
               VerticalAlignment="Center"/>
            <TextBox x:Name="FilenameTextBox" Grid.Row="2"
             Grid.Column="1"
             Margin="5"/>
            
            <!-- columns and include meta data checkbox -->
            <TextBlock Text="Columns"
               Grid.Row="3"
               VerticalAlignment="Center"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="ColumnsTextBox" Width="80" Margin="5"/>
                <CheckBox x:Name="MetaDataCheckBox" Content="Include meta data (.json)"
                  Margin="10,5"/>
            </StackPanel>
            
            <!-- Sprite List -->
            <ListBox x:Name="SpriteListBox" Grid.Row="4"
             Grid.Column="0"
             Grid.ColumnSpan="2"
             Margin="0,10,10,0"
             ScrollViewer.HorizontalScrollBarVisibility="Auto"
             ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Height="64" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="4"
                Grid.Column="2"
                VerticalAlignment="Top">

                <Button x:Name="AddButton" Content="Add" Margin="0,0,0,5" Width="90" Click="AddButton_Click"/>
                <Button x:Name="RemoveButton" Content="Remove" Margin="0,0,0,5" Width="90" Click="RemoveButton_Click"/>
                <Button x:Name="GenerateButton" Content="Generate" Width="90" Click="GenerateButton_Click"/>

            </StackPanel>

        </Grid>
    </DockPanel>
</Window>
